# Discord Bot の設定（必須）
BOT_TOKEN=your_discord_bot_token_here
CHANNEL_ID=your_text_channel_id_here

# 基本TTS設定
TTS_ENGINE=macos
TTS_VOICE=Kyoko
TTS_RATE=230
TTS_VOLUME=50

# オーディオ出力設定
BLACKHOLE_DEVICE=BlackHole 2ch
USE_AFPLAY=false
ENABLE_DUAL_OUTPUT=false
SPEAKER_DEVICE=

# ユーザーフィルター設定
ALLOWED_USERS=

# VOICEVOX設定（TTSエンジンがvoicevoxの場合）
VOICEVOX_HOST=localhost
VOICEVOX_PORT=50021
VOICEVOX_SPEAKER=3
VOICEVOX_SPEED=1.0
VOICEVOX_PITCH=0.0
VOICEVOX_INTONATION=1.0
VOICEVOX_VOLUME=1.0

# 設定例:
# ずんだもんを使用する場合
# TTS_ENGINE=voicevox
# VOICEVOX_SPEAKER=3

# 四国めたん（あまあま）を使用する場合
# TTS_ENGINE=voicevox
# VOICEVOX_SPEAKER=0

# 特定ユーザーのみ読み上げる場合（カンマ区切り）
# ALLOWED_USERS=123456789012345678,987654321098765432 