# Discord Bot の設定（必須）
BOT_TOKEN=your_discord_bot_token_here
CHANNEL_ID=your_text_channel_id_here

# 基本TTS設定
TTS_ENGINE=system
TTS_VOICE=Kyoko
TTS_RATE=230
TTS_VOLUME=50

# オーディオ出力設定
BLACKHOLE_DEVICE=BlackHole 2ch
USE_AFPLAY=false
ENABLE_DUAL_OUTPUT=false
SPEAKER_DEVICE=

# ユーザーフィルター設定
ALLOWED_USERS=

# VOICEVOX設定（TTSエンジンがvoicevoxの場合）
VOICEVOX_HOST=localhost
VOICEVOX_PORT=50021
VOICEVOX_SPEAKER=3
VOICEVOX_SPEED=1.0
VOICEVOX_PITCH=0.0
VOICEVOX_INTONATION=1.0
VOICEVOX_VOLUME=1.0

# プラットフォーム別設定例:

# ===== Windows設定例 =====
# システムTTSを使用する場合
# TTS_ENGINE=system
# TTS_VOICE=Haruka
# BLACKHOLE_DEVICE=CABLE Input (VB-Audio Virtual Cable)

# Windows用VOICEVOXを使用する場合
# TTS_ENGINE=voicevox
# VOICEVOX_SPEAKER=3
# BLACKHOLE_DEVICE=CABLE Input (VB-Audio Virtual Cable)

# ===== macOS設定例 =====
# システムTTSを使用する場合
# TTS_ENGINE=system
# TTS_VOICE=Kyoko
# BLACKHOLE_DEVICE=BlackHole 2ch

# macOS用VOICEVOXを使用する場合
# TTS_ENGINE=voicevox
# VOICEVOX_SPEAKER=3
# BLACKHOLE_DEVICE=BlackHole 2ch

# ===== 共通設定例 =====
# ずんだもんを使用する場合
# TTS_ENGINE=voicevox
# VOICEVOX_SPEAKER=3

# 四国めたん（あまあま）を使用する場合
# TTS_ENGINE=voicevox
# VOICEVOX_SPEAKER=0

# 特定ユーザーのみ読み上げる場合（カンマ区切り）
# ALLOWED_USERS=123456789012345678,987654321098765432

# デュアル出力を有効にする場合
# ENABLE_DUAL_OUTPUT=true
# SPEAKER_DEVICE=外部ヘッドホン 