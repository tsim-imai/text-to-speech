{
    "name": "discord-tts-bridge",
    "version": "1.0.0",
    "description": "Discord テキストチャンネルのメッセージを macOS TTS で読み上げて BlackHole 経由で配信するアプリ",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "dev": "tsx src/index.ts",
        "start": "node dist/index.js",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts"
    },
    "keywords": [
        "discord",
        "tts",
        "macos",
        "blackhole",
        "audio"
    ],
    "author": "あなたの名前",
    "license": "MIT",
    "dependencies": {
        "discord.js": "^14.14.1",
        "commander": "^11.1.0",
        "dotenv": "^16.3.1",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.6",
        "@typescript-eslint/eslint-plugin": "^6.16.0",
        "@typescript-eslint/parser": "^6.16.0",
        "eslint": "^8.56.0",
        "prettier": "^3.1.1",
        "tsx": "^4.6.2",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}